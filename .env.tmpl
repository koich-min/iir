# Example environment configuration for local use.
# Copy this file to .env to activate.

# Database engine: sqlite (default), postgresql, or mysql
# DB_ENGINE=sqlite

# Database name (postgresql/mysql)
# DB_NAME=iir

# Database user (postgresql/mysql)
# DB_USER=iir

# Database host (postgresql/mysql)
# DB_HOST=localhost

# Database port (optional; defaults: 5432 for postgresql, 3306 for mysql)
# DB_PORT=5432

# Optional sqlite database path when DB_ENGINE=sqlite
# SQLITE_PATH=/data/db.sqlite3
